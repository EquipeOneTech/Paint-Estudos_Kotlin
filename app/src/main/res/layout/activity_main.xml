<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="0dp"
        tools:context="com.astronomia.paint2.MainActivity"
        >

    <com.astronomia.paint2.CanvasView
            android:id="@+id/canvas"
            android:layout_width="match_parent"
            android:layout_height="414dp"
            android:layout_above="@+id/clearCanvas"
            android:layout_alignParentTop="true"
            android:layout_marginTop="53dp" android:layout_alignParentStart="true" android:layout_marginBottom="-4dp"
            android:layout_marginStart="0dp"/>
    <Button
            android:id="@+id/clearCanvas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:text="Limpar"
            android:onClick="ClearCanvas"/>

    <RadioGroup
            android:id="@+id/group"
            android:layout_width="match_parent"
            android:layout_height="162dp" android:layout_alignParentStart="true" android:layout_alignParentTop="true">
        <RadioButton
                android:text="Black"
                android:layout_width="94dp"
                android:layout_height="wrap_content"
                android:id="@+id/radioButton"
                android:layout_marginLeft="@android:idiidd"/>
        <RadioButton
                android:text="RadioButton"
                android:layout_toEndOf="@+id/radioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/radioButton2"/>
        <RadioButton
                android:text="RadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="73dp"
                android:id="@+id/radioButton3"/>
        <RadioButton
                android:text="RadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="24dp"
                android:id="@+id/radioButton4"/>
    </RadioGroup>

</RelativeLayout>